- max_length_of_event_document = 10
.col-md-12.spacer15
%span.light-blue Document name
- if file
  = hidden_field_tag 'event_files_attributes[][id]', file.id
  = text_field_tag 'event_files_attributes[][display_name]', file.display_name, class: 'form-control mcqAnsTextField', maxlength: max_length_of_event_document
  .input-field-subtext#eventDescSubText
    #{find_field_length(file.display_name)}/#{max_length_of_event_document}
- elsif @event_file.present?
  = text_field_tag 'event_files_attributes[][display_name]', @event_file.display_name, class: 'form-control mcqAnsTextField', maxlength: max_length_of_event_document
  .input-field-subtext#eventDescSubText
    #{find_field_length(@event_file.display_name)}/#{max_length_of_event_document}
- else
  = text_field_tag 'event_files_attributes[][display_name]', '', class: 'form-control mcqAnsTextField', maxlength: max_length_of_event_document
  .input-field-subtext#eventDescSubText
    0/#{max_length_of_event_document}
.row
  .col-md-10
    %span.btn.btn_sign_in.btn-file
      = t('admin.participant.caption.button.choose_file')
      = file_field_tag 'event_files_attributes[][event_doc]', type: :file