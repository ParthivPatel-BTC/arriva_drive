      %label.common-font-color Email (this will also be their User Name)
      .input
        %input.form-control{name: "InputEmail", placeholder: "Email", required: "", type: "email"}/
    .form-group
      %label.common-font-color Password
      .input
        %input.form-control{name: "InputEmail", placeholder: "Password", required: "", type: "password"}/
