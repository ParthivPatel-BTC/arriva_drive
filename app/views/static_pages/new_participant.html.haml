      %b New Participant
.row
  .col-xs-4.col-md-4
    %h3.dark-blue
      %b Profile
    .form-group
      %label.common-font-color
        %b First Name
      .input
        %input.form-control{name: "InputName", placeholder: "First Name", required: "", type: "text"}/
    .form-group
      %label.common-font-color Surname
      .input
        %input.form-control{name: "InputEmail", placeholder: "Surname", required: "", type: "email"}/
    .form-group
      %label.common-font-color Job Title
      .input
        %input.form-control{name: "InputEmail", placeholder: "Job Title", required: "", type: "email"}/
    .form-group
      %label.common-font-color Division
      %div
        %label.checkbox-inline
          %input#optionsRadios3{checked: "checked", name: "optionsRadiosinline", type: "radio", value: "option1"}/
