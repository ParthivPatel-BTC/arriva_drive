        %label.checkbox-inline
          %input#optionsRadios4{name: "optionsRadiosinline", type: "radio", value: "option2"}/
          UK Trains
        %label.checkbox-inline
          %input#optionsRadios4{name: "optionsRadiosinline", type: "radio", value: "option2"}/
          Mainiand Europe
