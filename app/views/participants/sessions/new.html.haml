    .loginsection
      .loginbox
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          %p
            = f.email_field :email, autofocus: true, placeholde: 'Email'
          %p
            = f.password_field :password, autocomplete: "off", placeholde: 'Password'
          %p
            = link_to_submit do
              %i.icon-login
              %span.logintext LOGIN
            = submit_tag(" ")
          - if devise_mapping.rememberable?
            %p
              %span.remember
                REMEMBER ME
                = f.check_box :remember_me
      .clearfix
      .arriva
        - if browser.ios?
          = image_tag 'images/logo-arriva@2x.png', height: '39'
