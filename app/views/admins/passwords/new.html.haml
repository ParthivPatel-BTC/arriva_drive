- if devise_error_messages!.present?
  = devise_error_messages!
= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:class => "form-signin"}) do |f|
  %h2.form-signin-heading.pull-left
    %b.dark-blue=t('sign_in.page_content.header.forgot_password')
  .spacer70.spacer-width
  = f.email_field :email, autofocus: true, placeholder: t('sign_in.caption.email'), class: 'form-control'
  %label.pull-left
    = render 'admins/shared/links'
  .spacer45.spacer-width
  = f.submit t('common.caption.submit'), class: 'btn btn_sign_in pull-left', title: t('common.caption.submit')