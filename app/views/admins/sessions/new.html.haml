.starter-template
  = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f|
    %h2.form-signin-heading.pull-left
      %b=t('sign_in.page_content.header.please_sign_in')
    = f.email_field :email, autofocus: true, placeholder: t('sign_in.caption.email'), class: 'form-control'
    .spacer20.spacer-width
    = f.password_field :password, placeholder: t('sign_in.caption.password'), class: 'form-control'
    %label.pull-left.common-font-color
      = t('sign_in.caption.forgot_password')
    .spacer25.spacer-width
    = f.submit t('sign_in.caption.button.sign_in'), class: 'btn btn_sign_in pull-left'