- content_for(:title, 'Drive Values')
.main-panel
  .behaviours-panel
    #dvParent.clearfix.behaviours-block{"data-js-module" => "hero-demo"}
      .behaviours-value
        .behavioursvalue
          %h3= t('participant.values_behaviours.captions.values')
          %ul.behaviourstablist.filters.js-radio-button-group
            %li.puttpeople
              %button.button.ulbutton{"data-filter" => ".puttingpeople"}= t('participant.values_behaviours.captions.values_left_scroller.tabs-1')
            %li.custservice
              %button.button.ulbutton{"data-filter" => ".delivercustomer"}= t('participant.values_behaviours.captions.values_left_scroller.tabs-2')
            %li.trustrespect
              %button.button.ulbutton{"data-filter" => ".trustrespect"}= t('participant.values_behaviours.captions.values_left_scroller.tabs-3')
            %li.sustainable
              %button.button.ulbutton{"data-filter" => ".growingbusiness"}= t('participant.values_behaviours.captions.values_left_scroller.tabs-4')
            %li.succeresult
              %button.button.ulbutton{"data-filter" => ".deliverresult"}= t('participant.values_behaviours.captions.values_left_scroller.tabs-5')
      .behaviours-detail
        .behaviourstap-panel
          .behaviourstap-detail
            %span
              = image_tag "tap-behaviours.png"
              = link_to t('participant.values_behaviours.captions.ok'), javascript_void, class: 'btn tapbtn'
        %h3= t('participant.values_behaviours.captions.behaviours')
