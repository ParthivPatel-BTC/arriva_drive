                %p= t('participant.values_behaviours.captions.behaviours_content.behaviour_div_10.caption.paragraph_1') 
                %p= t('participant.values_behaviours.captions.behaviours_content.behaviour_div_10.caption.paragraph_2')
    .overlay{"data-sidebar-overlay" => ""}

:javascript
  $(document).ready(function(){
    $('#myStathalf2').circliful();
    $('.recentnote-slide').bxSlider({
      auto: true,
      controls:false
    });
    $(".tapbtn").click(function(){
      $(".behaviourstap-panel").css("display","none");
      $(".puttpeople").find("button").click();
    });
    $(".ulbutton").click(function(){
      $(".behaviourstap-panel").css("display", "none");
      var objDynamicClassName = $(this).attr('data-filter');
      $("#dvParent").removeClass("puttingpeople-active");
      $("#dvParent").removeClass("delivercustomer-active");
      $("#dvParent").removeClass("trustrespect-active");
      $("#dvParent").removeClass("growingbusiness-active");
      $("#dvParent").removeClass("deliverresult-active");
      $('#dvParent').addClass(objDynamicClassName.substring(1,objDynamicClassName.length)  + '-active');
    });
  });