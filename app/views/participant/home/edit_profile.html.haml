= form_for @participant, url: update_profile_path(current_participant), html: {:class => "participantForm", multipart: true } do |f|
  = hidden_field_tag('id', current_participant.id)
  %section.mainsection
    = render partial: 'participants/components/left_side_bar'
    .contentarea
      .editprofile
        %p= current_participant.full_name
        %p= current_participant.job_title
        %p= get_division_name(current_participant.division)
        %p= current_participant.year_started
        .changespassword
          %p Create New Password
          %p
            = password_field_tag 'password', autofocus: true
          %p
            = password_field_tag 'participants[password]'
    = render partial: 'participants/components/edit_profile_right_bar'