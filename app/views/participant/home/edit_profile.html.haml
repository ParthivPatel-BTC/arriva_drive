= form_for Participant.new, url: update_profile_path(current_participant), html: {:class => "participantForm"} do |f|
  = hidden_field_tag('id', current_participant.id)
  %section.mainsection
    = render partial: 'participants/components/left_side_bar'
    .contentarea
      .profilebox
        %p.name= current_participant.full_name.titleize
        %p= current_participant.job_title
        %p= get_division_name(current_participant.division)
        %p= current_participant.year_started

        #password_modal.modal
          .modal-header
            %h3
              Change Password
              %span.extra-title.muted
          .modal-body.form-horizontal
            .control-group
              %label.control-label{for: "new_password"} New Password
              .controls
                = password_field_tag 'new_password'
            .control-group
              %label.control-label{for: "confirm_password"} Confirm Password
              .controls
                = password_field_tag 'participant[password]'
          .modal-footer
            %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal", href: "#"} Close
            = submit_tag "Save changes"
    .rightsidebar
      .profilebox
        .profilepic
          - if current_participant.photo.exists?
            = image_tag (current_participant.photo.url(:medium))
          - else
            = image_tag 'silhouette.jpg'
          %span.btn.btn_sign_in.btn-file
            = t('admin.participant.caption.button.choose_file')
            = file_field_tag 'participant[photo]'