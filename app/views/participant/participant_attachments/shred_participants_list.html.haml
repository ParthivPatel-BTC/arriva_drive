%section.mainsection
  = render partial: 'participants/components/left_side_bar'
  .contentarea
    .writenotes
      .writenotesinfo.boxbg
        = form_tag(create_shared_participants_path, method: :post, id: 'tagBehaviourForm', multipart: true) do
          = hidden_field_tag 'participant_attachments[participant_attachment_id]', @attachment.id rescue nil

          .commentarea.notelist.uppercase
            %p THE PEOPLE TO SHARE THIS FILE WITH THEM ...
            %ul
              - @participants.each do |participant|
                %li
                  %label= participant.full_name
                  = check_box_tag "participant_attachments[participant_id][]", participant.id, @shared_participants.include?(participant.id.to_s)
          - if @participants.blank?
            %p.lime-color Sorry, There are no participents in your network
          .writeiconright
            = link_to_submit tag_participants_behaviours_participant_notes_path, title: t('common.caption.ok') do
              %i.icon-done
  = render partial: 'participants/components/right_side_bar'
